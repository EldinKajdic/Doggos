    <!-- Kontaktformuläret -->
<section id="contact2">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <!-- Rubrik för sektionen -->
                <h2 class="section-heading">Kontakta oss</h2>
                <h3 class="section-subheading text-muted">Du kan enkelt nå oss genom att skicka ett meddelande</h3>
                <br>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <form name="sentMessage" id="contactForm" novalidate>
                    <!-- Form för kontaktformuläret med validering -->
                    <!-- Placeholder syns i rutan och data-validation-required-message är vad som visas vid felinmatning -->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <!-- Inmatningsruta för telefonnummer -->
                                <input type="text" class="form-control" placeholder="Ditt namn *" id="name" required data-validation-required-message="<span style='color:red'>Vänligen fyll i ett namn.</span>">
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group">
                                <!-- Inmatningsruta för email -->
                                <input type="email" class="form-control" placeholder="Din mail *" id="email" required data-validation-required-message="<span style='color:red'>Vänligen fyll in en mailadress.</span>">
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group">
                                <!-- Inmatningsruta för telefonnummer -->
                                <input type="tel" class="form-control" placeholder="Ditt telefonnummer *" id="phone" required data-validation-required-message="<span style='color:red'>Vänligen fyll in ditt telefonnummer.</span>">
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <!-- Inmatningsruta för meddelandet -->
                                <textarea class="form-control" style="resize:none;" placeholder="Ditt meddelande *" rows="8" id="message" required data-validation-required-message="<span style='color:red'>Vänligen skriv in ditt meddelande.</span>"></textarea>
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="clearfix"></div> <!-- Rensar inmatningsrutorna efter submit -->
                        <div class="col-lg-12 text-center">
                            <div id="success"></div>
                            <button type="submit" class="btn btn-xl">Skicka meddelande</button> <!-- Submit som sänder emailen -->
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

